{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    
    // 🚀 编译速度优化
    "incremental": true,                    // 启用增量编译
    "skipLibCheck": true,                   // 跳过库类型检查，大幅提升速度
    "skipDefaultLibCheck": true,            // 跳过默认库检查
    "noEmit": true,                         // 不生成输出文件，只做类型检查
    "isolatedModules": true,                // 每个文件作为单独模块，提升并行性能
    
    // 🎯 路径优化 - 减少模块解析时间
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@assets/*": ["assets/*"]
    },
    
    // ⚡ 模块解析优化
    "module": "esnext",                      // 支持动态导入
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    
    // 🛡️ JSC兼容性确保
    "target": "ES2017",                     // JSC兼容的目标版本
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "allowJs": true,                        // 允许JS文件混用
    "jsx": "react-native"                   // React Native JSX模式
  },
  "include": [
    "src/**/*",
    "assets/**/*",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "ios",
    "android",
    "web-build",
    ".expo",
    "dist"
  ],
  
  // 🔧 TypeScript编译缓存配置
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
