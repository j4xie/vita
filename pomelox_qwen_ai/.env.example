# ==================== DashScope API 配置 ====================
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# ==================== 数据库配置 ====================
# 数据库类型: json (开发) 或 mysql (生产)
DATABASE_TYPE=json

# ==================== MySQL 配置 (生产环境) ====================
# MySQL连接信息
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=pomelox_ai

# ==================== SSH隧道配置 (可选) ====================
# 是否使用SSH隧道连接MySQL
USE_SSH_TUNNEL=false

# SSH服务器信息
SSH_HOST=your-server.com
SSH_PORT=22
SSH_USER=root

# SSH认证方式 (二选一):
# 方式1: 使用密码
SSH_PASSWORD=your_ssh_password

# 方式2: 使用私钥文件 (推荐)
# SSH_KEY_FILE=/path/to/your/private_key.pem

# ==================== RAG 配置 ====================
# 检索块数量
RAG_CHUNK_COUNT=5

# 相似度阈值 (0.0 ~ 1.0)
RAG_SIMILARITY_THRESHOLD=0.2

# 高质量阈值 (超过此值不使用联网搜索)
RAG_HIGH_QUALITY_THRESHOLD=0.5

# ==================== 反馈系统配置 ====================
# 置信度阈值
CONFIDENCE_AUTO_APPROVE_THRESHOLD=0.8
CONFIDENCE_PENDING_THRESHOLD=0.5

# 相似问题检测阈值
SIMILAR_QUESTION_THRESHOLD=0.85

# ==================== 向量存储路径 ====================
VECTOR_STORE_PATH=./vector_store
