<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.UserExtendsDataMapper">
    
    <resultMap type="UserExtendsData" id="UserExtendsDataResult">
        <result property="userId"    column="user_id"    />
        <result property="userPoint"    column="user_point"    />
    </resultMap>

    <sql id="selectUserExtendsDataVo">
        select user_id, user_point from user_extends_data
    </sql>

    <select id="selectUserExtendsDataList" parameterType="UserExtendsData" resultMap="UserExtendsDataResult">
        <include refid="selectUserExtendsDataVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="userPoint != null "> and user_point = #{userPoint}</if>
        </where>
    </select>
    
    <select id="selectUserExtendsDataByUserId" parameterType="Long" resultMap="UserExtendsDataResult">
        <include refid="selectUserExtendsDataVo"/>
        where user_id = #{userId}
    </select>

    <insert id="insertUserExtendsData" parameterType="UserExtendsData">
        insert into user_extends_data
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="userPoint != null">user_point,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="userPoint != null">#{userPoint},</if>
         </trim>
    </insert>

    <update id="updateUserExtendsData" parameterType="UserExtendsData">
        update user_extends_data
        <trim prefix="SET" suffixOverrides=",">
            <if test="userPoint != null">user_point = #{userPoint},</if>
        </trim>
        where user_id = #{userId}
    </update>

    <update id="addUserPoint" parameterType="UserExtendsData">
        update user_extends_data set user_point = user_point + #{userPoint}
        where user_id = #{userId}
    </update>

    <update id="refundUserPoint" parameterType="UserExtendsData">
        update user_extends_data set user_point = user_point + #{userPoint}
        where user_id = #{userId}
    </update>

    <delete id="deleteUserExtendsDataByUserId" parameterType="Long">
        delete from user_extends_data where user_id = #{userId}
    </delete>

    <delete id="deleteUserExtendsDataByUserIds" parameterType="String">
        delete from user_extends_data where user_id in 
        <foreach item="userId" collection="array" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>
</mapper>