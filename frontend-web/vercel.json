{
  "version": 2,
  "name": "pomelox-platform",
  "projects": [
    {
      "name": "frontend-web",
      "source": "frontend-web",
      "builds": [
        {
          "src": "frontend-web/package.json",
          "use": "@vercel/static-build",
          "config": {
            "distDir": "frontend-web/dist"
          }
        }
      ],
      "routes": [
        {
          "src": "/static/(.*)",
          "dest": "/static/$1"
        },
        {
          "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
          "dest": "/$1"
        },
        {
          "src": "/(.*)",
          "dest": "/index.html"
        }
      ]
    }
  ]
}