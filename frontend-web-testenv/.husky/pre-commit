#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 运行翻译键验证..."

# 运行翻译验证
cd frontend && node package-scripts/validate-translations.js

if [ $? -ne 0 ]; then
  echo ""
  echo "❌ 翻译键验证失败！"
  echo "💡 请修复上述翻译问题后再提交"
  echo "🔧 运行以下命令查看详细信息："
  echo "   cd frontend && npm run validate-translations"
  echo ""
  exit 1
fi

echo "✅ 翻译键验证通过"